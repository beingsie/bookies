{
    "manifest_version": 3,
    "name": "Bookies",
    "version": "0.2.3",
    "description": "Bookies is a browser extension that allows you to conveniently add and personalize your favorite links. Access them with ease through your browser's context menu.",
    "permissions": [
        "contextMenus",
        "activeTab",
        "storage"
    ],
    "icons": {
        "48": "icons/icon48.png"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "action": {
        "default_popup": "src/options.html",
        "open_in_tab": false,
        "default_icon": {
            "48": "icons/icon48.png"
        }
    },
    "options_ui": {
        "page": "src/options.html",
        "open_in_tab": false
    },
    "default_locale": "en"
}